# =============================================================================
# CONFIGURAÇÃO DO SISTEMA DE RECOMENDAÇÕES DE INVESTIMENTOS
# =============================================================================

# Ambiente
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Claude API
ANTHROPIC_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Database
DATABASE_URL=sqlite:///./data/investment_system.db
DATABASE_ECHO=false

# APIs Externas
YFINANCE_TIMEOUT=30
ALPHA_VANTAGE_API_KEY=

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Agno Configuration
AGNO_LOG_LEVEL=INFO
AGNO_MAX_WORKERS=4

# Logging
LOG_FILE=logs/investment_system.log
LOG_ROTATION=1 week
LOG_RETENTION=1 month

# Rate Limiting
REQUESTS_PER_MINUTE=100
REQUESTS_PER_HOUR=2000

# Cache
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Email (opcional na Fase 1)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=60
